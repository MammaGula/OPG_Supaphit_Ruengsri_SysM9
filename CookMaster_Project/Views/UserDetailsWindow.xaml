<Window x:Class="CookMaster_Project.Views.UserDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Details" Height="320" Width="460">
    <Grid Margin="12,12,12,28">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Current values (read-only) -->
        <TextBlock Text="Current Username:" Grid.Row="0" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
        <TextBox Text="{Binding CurrentUsername, Mode=OneWay}" Grid.Row="0" Grid.Column="1" Margin="5" IsReadOnly="True"/>

        <TextBlock Text="Current Country:" Grid.Row="1" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
        <TextBox Text="{Binding CurrentCountry, Mode=OneWay}" Grid.Row="1" Grid.Column="1" Margin="5" IsReadOnly="True"/>

        <!-- Spacer -->
        <Rectangle Grid.Row="2" Grid.ColumnSpan="2" Height="1" Fill="LightGray" Margin="0,6,0,6"/>

        <!-- New values -->
        <TextBlock Text="New Username:" Grid.Row="3" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
        <TextBox Text="{Binding NewUsername, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Grid.Column="1" Margin="5"/>

        <TextBlock Text="New Password:" Grid.Row="4" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
        <PasswordBox x:Name="NewPasswordBox" Grid.Row="4" Grid.Column="1" Margin="5" PasswordChanged="NewPasswordBox_PasswordChanged"/>

        <TextBlock Text="Confirm Password:" Grid.Row="5" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
        <PasswordBox x:Name="ConfirmPasswordBox" Grid.Row="5" Grid.Column="1" Margin="5" PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>

        <TextBlock Text="New Country:" Grid.Row="6" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
        <ComboBox ItemsSource="{Binding Countries}"
                  SelectedItem="{Binding SelectedCountry}"
                  Grid.Row="6" Grid.Column="1" Margin="5" Width="250"/>

        <!-- Error message block-->
        <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Grid.Row="7" Grid.ColumnSpan="2" Margin="5"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="8" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button Content="Save" Command="{Binding SaveCommand}" Width="90" Margin="5"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}" Width="90" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>

