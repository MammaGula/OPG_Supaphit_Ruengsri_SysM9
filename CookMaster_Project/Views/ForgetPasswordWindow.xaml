<Window x:Class="CookMaster_Project.Views.ForgetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ForgetPassWordWindow" Height="240" Width="400"
        xmlns:converters="clr-namespace:CookMaster_Project.Converters">
    <Window.Resources>
        <converters:StringNullOrEmptyToVisibilityConverter x:Key="StringNullOrEmptyToVisibilityConverter" />
    </Window.Resources>
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Username:" Grid.Row="0" Grid.Column="0" Margin="5"/>
        <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Grid.Column="1" Margin="5"/>

        <!-- Security Question (hidden when empty) -->
        <TextBlock Text="Security Question:"
                   Grid.Row="1" Grid.Column="0" Margin="5"
                   Visibility="{Binding SecurityQuestion, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"/>
        <TextBlock Text="{Binding SecurityQuestion}"
                   Grid.Row="1" Grid.Column="1" Margin="5" TextWrapping="Wrap"
                   Visibility="{Binding SecurityQuestion, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"/>

        <TextBlock Text="Security Answer:" Grid.Row="2" Grid.Column="0" Margin="5"/>
        <TextBox Text="{Binding SecurityAnswer, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Grid.Column="1" Margin="5"/>

        <TextBlock Text="New Password:" Grid.Row="3" Grid.Column="0" Margin="5"/>
        <PasswordBox x:Name="NewPasswordBox" Grid.Row="3" Grid.Column="1" Margin="5" PasswordChanged="NewPasswordBox_PasswordChanged"/>

        <TextBlock Text="Confirm Password:" Grid.Row="4" Grid.Column="0" Margin="5"/>
        <PasswordBox x:Name="ConfirmPasswordBox" Grid.Row="4" Grid.Column="1" Margin="5" PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>

        <!-- Error message (hidden when empty) -->
        <TextBlock Text="{Binding ErrorMessage}"
                   Foreground="Red"
                   Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Margin="5"
                   Visibility="{Binding ErrorMessage, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"/>

        <StackPanel Orientation="Horizontal" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Reset Password" Command="{Binding ResetCommand}" Margin="5" Width="99"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}" Margin="5" Width="80"/>
        </StackPanel>
    </Grid>
</Window>

