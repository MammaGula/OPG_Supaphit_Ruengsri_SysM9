<Window x:Class="CookMaster_Project.Views.ForgetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookMaster_Project.Views"
        mc:Ignorable="d"
        Title="ForgetPasswordWindow" Height="200" Width="350">

    <Grid>
        <Label Content="Username:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="UsernameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="112,18,0,0" Width="200"/>

        <Label Content="Security Answer:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <TextBox x:Name="SecurityAnswerTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="112,54,0,0" Width="200"/>

        <Label Content="New Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0"/>
        <PasswordBox x:Name="NewPasswordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="112,92,0,0" Width="200"/>

        <Button Content="Reset Password" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="139,130,0,0" Width="100" Click="ResetPasswordButton_Click"/>
    </Grid>
</Window>
