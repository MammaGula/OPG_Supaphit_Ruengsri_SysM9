<Window x:Class="CookMaster_Project.Views.RecipeDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe Details" Height="350" Width="500">
    <ScrollViewer Margin="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Title:" Grid.Row="0" Grid.Column="0" Margin="4" FontWeight="Bold"/>
            <TextBlock Text="{Binding Title}" Grid.Row="0" Grid.Column="1" Margin="4"/>

            <TextBlock Text="Type:" Grid.Row="1" Grid.Column="0" Margin="4" FontWeight="Bold"/>
            <TextBlock Text="{Binding Type}" Grid.Row="1" Grid.Column="1" Margin="4"/>

            <TextBlock Text="Time (minutes):" Grid.Row="2" Grid.Column="0" Margin="4" FontWeight="Bold"/>
            <TextBlock Text="{Binding TimeMinutes}" Grid.Row="2" Grid.Column="1" Margin="4"/>

            <TextBlock Text="Created By:" Grid.Row="3" Grid.Column="0" Margin="4" FontWeight="Bold"/>
            <TextBlock Text="{Binding CreatedBy}" Grid.Row="3" Grid.Column="1" Margin="4"/>

            <TextBlock Text="Created Date:" Grid.Row="4" Grid.Column="0" Margin="4" FontWeight="Bold"/>
            <TextBlock Text="{Binding CreatedDate, StringFormat=yyyy-MM-dd HH:mm}" Grid.Row="4" Grid.Column="1" Margin="4"/>

            <TextBlock Text="Description:" Grid.Row="5" Grid.Column="0" Margin="4" FontWeight="Bold" VerticalAlignment="Top"/>
            <TextBlock Text="{Binding Description}" Grid.Row="5" Grid.Column="1" Margin="4" TextWrapping="Wrap"/>

            <TextBlock Text="Ingredients:" Grid.Row="6" Grid.Column="0" Margin="4" FontWeight="Bold" VerticalAlignment="Top"/>
            <TextBlock Text="{Binding Ingredients}" Grid.Row="6" Grid.Column="1" Margin="4" TextWrapping="Wrap"/>

            <TextBlock Text="Instructions:" Grid.Row="7" Grid.Column="0" Margin="4" FontWeight="Bold" VerticalAlignment="Top"/>
            <TextBlock Text="{Binding Instructions}" Grid.Row="7" Grid.Column="1" Margin="4" TextWrapping="Wrap"/>
        </Grid>
    </ScrollViewer>
</Window>
