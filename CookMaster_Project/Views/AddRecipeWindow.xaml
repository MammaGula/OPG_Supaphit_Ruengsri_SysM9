<Window x:Class="CookMaster_Project.Views.AddRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Recipe" Height="350" Width="800">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Title:" Grid.Row="0" Grid.Column="0" Margin="4" VerticalAlignment="Center"/>
        <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Grid.Column="1" Margin="4"/>

        <TextBlock Text="Type:" Grid.Row="1" Grid.Column="0" Margin="4" VerticalAlignment="Center"/>
        <ComboBox ItemsSource="{Binding Types}"
                  SelectedItem="{Binding SelectedType}"
                  Grid.Row="1" Grid.Column="1" Margin="4" Width="220"/>

        <TextBlock Text="Description:" Grid.Row="2" Grid.Column="0" Margin="4" VerticalAlignment="Top"/>
        <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                 Grid.Row="2" Grid.Column="1" Margin="4" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

        <TextBlock Text="Ingredients:" Grid.Row="3" Grid.Column="0" Margin="4" VerticalAlignment="Top"/>
        <TextBox Text="{Binding Ingredients, UpdateSourceTrigger=PropertyChanged}"
                 Grid.Row="3" Grid.Column="1" Margin="4" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

        <TextBlock Text="Instructions:" Grid.Row="4" Grid.Column="0" Margin="4" VerticalAlignment="Top"/>
        <TextBox Text="{Binding Instructions, UpdateSourceTrigger=PropertyChanged}"
                 Grid.Row="4" Grid.Column="1" Margin="4" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Height="120"/>

        <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="4,12,4,0">
            <TextBlock Text="Time (minutes):" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox Text="{Binding TimeMinutesText, UpdateSourceTrigger=PropertyChanged}" Width="100" Margin="0,0,16,0"/>

            <TextBlock Text="Date:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <DatePicker SelectedDate="{Binding SelectedDate}" Width="140" Margin="0,0,16,0"/>

            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" VerticalAlignment="Center" Margin="8,0,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="4,12,4,0">
            <Button Content="Save" Command="{Binding SaveCommand}" Width="100" Margin="4"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}" Width="100" Margin="4"/>
        </StackPanel>
    </Grid>
</Window>
