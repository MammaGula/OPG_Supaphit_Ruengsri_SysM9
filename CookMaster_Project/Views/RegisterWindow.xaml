<Window x:Class="CookMaster_Project.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RegisterWindow" Height="300" Width="400">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        
        <TextBlock Text="Username:" Grid.Row="0" Grid.Column="0" Margin="5"/>
        <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Password:" Grid.Row="1" Grid.Column="0" Margin="5"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="1" Grid.Column="1" Margin="5" PasswordChanged="PasswordBox_PasswordChanged"/>

        <TextBlock Text="Confirm Password:" Grid.Row="2" Grid.Column="0" Margin="5"/>
        <PasswordBox x:Name="ConfirmPasswordBox" Grid.Row="2" Grid.Column="1" Margin="5" PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>

        <TextBlock Text="Country:" Grid.Row="3" Grid.Column="0" Margin="5"/>
        <ComboBox ItemsSource="{Binding Countries}" SelectedItem="{Binding SelectedCountry}" Grid.Row="3" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Security Question:" Grid.Row="4" Grid.Column="0" Margin="5"/>
        <TextBox Text="{Binding SecurityQuestion, UpdateSourceTrigger=PropertyChanged}" Grid.Row="4" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Security Answer:" Grid.Row="5" Grid.Column="0" Margin="5"/>
        <TextBox Text="{Binding SecurityAnswer, UpdateSourceTrigger=PropertyChanged}" Grid.Row="5" Grid.Column="1" Margin="5"/>

        <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Margin="5"/>

        <StackPanel Orientation="Horizontal" Grid.Row="7" HorizontalAlignment="Right" Margin="0,10,0,0" Grid.Column="1">
            <Button Content="Register" Command="{Binding RegisterCommand}" Margin="5" Width="80" />
            <Button Content="Cancel" Command="{Binding CancelCommand}" Margin="5" Width="80"/>
        </StackPanel>
    </Grid>
</Window>


